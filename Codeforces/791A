import java.util.*;
public class JavaStudy {

   static  Scanner input = new Scanner (System.in);
   public static void main(String[] args) {
       int a = input . nextInt() ; 
       int b = input . nextInt() ; 
       int years = 0 ;
       while (a<=b ) {           
           a *= 3; 
           b *= 2;
           years++;
       }
      
       System.out.println(years);

   }
     
                           
   
}
