import java.io.*;
import java.util.*;

public class JavaStudy {
    static Scanner input = new Scanner(System.in);
    public static void main(String[] args) throws IOException, AWTException {
        int n = input.nextInt() ;
        int a = input.nextInt() ;
        int b = input.nextInt() ;

        int formula = n - Math.max(a+1,n-b) + 1 ;
        System.out.println( formula );
    }

}
