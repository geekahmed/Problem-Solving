import java.util.*;
public class JavaStudy {

   static  Scanner input = new Scanner (System.in);
   public static void main(String[] args) {
       int n = input.nextInt();
       int h = input.nextInt();
       int x , ans=0 ; 
       
       for (int i = 0 ; i < n ; i++)
       {
           x = input.nextInt() ; 
           if (x > h)
               ans++;
           ans++ ;
       }
       System.out.println(ans);

   }
     
                           
   
}

    
