import java.util.*;

public class JavaStudy {
    static Scanner input = new Scanner(System.in);

    public static void main(String[] args){
       int a = input.nextInt();
       int b = input.nextInt() ;
       int n = input.nextInt() ;

       int sum = Math.abs(a) + Math.abs(b) ;

       n -= sum ;

       if (n >= 0 && n % 2 == 0){
           System.out.println("Yes");
       } else{
           System.out.println("No");
       }
    }
}
