import java.util.*;
public class JavaStudy {

   static  Scanner input = new Scanner (System.in);
   public static void main(String[] args) {
       int n = input.nextInt();
       int ans = 0 ; 
       for (int i = 0 ; i < n ; i++)
       {
           int x , y , z ; 
           x = input.nextInt();
           y = input.nextInt();
           z = input.nextInt();
           if (x+y+z>=2)
           ans++;
       }
       System.out.println(ans);

   }
      
}
