import java.util.*;

public class JavaStudy {
    static Scanner input = new Scanner(System.in);

    public static void main(String[] args) {
        int n = input.nextInt() ;
        if (n == 0)
            System.out.println(1);
        else {
            int[] a = {8,4,2,6} ;
            n = (n-1) % 4 ;
            System.out.println(a[n]);
        }

    }
}

    
