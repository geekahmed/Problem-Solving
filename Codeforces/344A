import java.util.*;
public class JavaStudy {
    static Scanner input = new Scanner (System.in);

   public static void main(String[] args)  {
       int n  = input.nextInt() ; 
       int a , b=0 , c=0 ; 
       for (int i = 0 ; i < n ; i++){
           a = input.nextInt();
           if (a!=b)
               c++ ;
           b = a ;
       }
       System.out.println(c);
   }
                      
   
}
